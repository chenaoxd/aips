<% include header %>
<form class="form-horizontal" method="post" action="/subform/<%= act_id %>">
  <div class="form-group">
    <label class="control-label col-lg-1">活动名</label>
    <div class="col-lg-3">
      <input class="form-control" type="text" value="<%= act_name %>" disabled>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-lg-1">活动Id</label>
    <div class="col-lg-3">
      <input class="form-control" type="text" name="actID" value="<%= act_id %>" disabled>
    </div>
  </div>
  <% for(var key in form_info){ %>
  <div class="form-group">
    <label class="control-label col-lg-1"><%= key %></label>
    <div class="col-lg-3">
      <input class="form-control" name="<%= key %>" type="text"/>
    </div>
  </div>
  <% } %>
  <div class="form-group">
    <label class="control-label col-lg-1"></label>
    <div class="col-lg-3">
      <input class="btn btn-default" type="submit" value="提交"/>
    </div>
  </div>
</form>
<% include footer %>